{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next node_modules/.cache 2>/dev/null || echo 'Cache cleanup completed'",
    "clean:force": "sudo chown -R $USER:$USER .next 2>/dev/null && rm -rf .next node_modules/.cache || rm -rf .next node_modules/.cache 2>/dev/null || echo 'Some files require manual cleanup'",
    "generate:certs": "mkdir -p ssl && openssl req -newkey rsa:2048 -x509 -nodes -keyout ./ssl/server.key -new -out ./ssl/server.crt -config ./ssl/certdef.cnf -sha256 -days 365",
    "dev": "npm run clean:force && (test -f ssl/server.key || npm run generate:certs) && next dev --experimental-https --experimental-https-key ./ssl/server.key --experimental-https-cert ./ssl/server.crt",
    "dev:docker": "(test -f ssl/server.key || npm run generate:certs) && next dev --experimental-https --experimental-https-key ./ssl/server.key --experimental-https-cert ./ssl/server.crt",
    "dev:http": "npm run clean:force && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@apollo/experimental-nextjs-app-support": "^0.12.2",
    "@graphql-tools/mock": "^9.0.22",
    "@graphql-tools/schema": "^10.0.23",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.12.1",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.13.4",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "sweetalert2": "^11.21.2",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
